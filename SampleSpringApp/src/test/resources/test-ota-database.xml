<?xml  version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"	
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="		
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<!-- CONTENT SCHEMA -->
	
	 
	<bean id="dataSourceCon" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
<!--  		<property name="driverClassName" value="oracle.jdbc.xa.client.OracleXADataSource" /> -->
 		<property name="driverClassName" value="oracle.jdbc.pool.OracleDataSource" /> 
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:orcl" />
		<property name="username" value="spring_rw" />
		<property name="password" value="vijay" />
	</bean>
	 
		
<!-- 	<bean id="dataSourceCon" class="org.springframework.jndi.JndiObjectFactoryBean"> -->
<!--     	<property name="jndiName" value="java:StarfishContentDs"/> -->
<!--  	</bean>	 -->
 
	<!-- Hibernate session factory -->
	<bean id="sessionFactoryCon" class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
	  
	    <property name="dataSource">
	      <ref bean="dataSourceCon"/>
	    </property>
	     
	    <property name="annotatedClasses">
			<list>
				<value>com.thomascook.ota.common.bean.CardBinSeries</value>				
				<value>com.thomascook.ota.common.bean.CreditCardType</value>
				<value>com.thomascook.ota.common.bean.Site</value>
				<value>com.thomascook.ota.common.bean.SiteURLMap</value>
				<value>com.thomascook.ota.common.bean.CreditCardSiteMapping</value>	
				<value>com.thomascook.ota.common.bean.SitePropertyValue</value>	
				<value>com.thomascook.ota.common.bean.Brand</value>	
				<value>com.thomascook.ota.common.bean.Supplier</value>	
				<value>com.thomascook.ota.common.bean.TermsAndConditions</value>			
			</list>
	    </property>	 	
	    <property name="hibernateProperties">
	       <props>
	         <prop key="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</prop>
	         <prop key="hibernate.show_sql">true</prop>
	         <prop key="hibernate.hbm2ddl.auto">create</prop>
	       </props>
	    </property>
	  </bean>
</beans>